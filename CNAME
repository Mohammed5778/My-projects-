    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });

        // Component Templates
        function NavLink({ children }) {
            return `
                <a href="#" class="relative text-amber-900 hover:text-amber-600 transition-colors duration-300 font-medium">
                    ${children}
                    <span class="absolute bottom-0 left-0 w-full h-0.5 bg-amber-500 transform scale-x-0 transition-transform duration-300 group-hover:scale-x-100"></span>
                </a>
            `;
        }

        function FeatureCard({ icon, title, description }) {
            return `
                <div class="premium-glass p-8 rounded-2xl text-center transform hover:scale-105 transition-all duration-300" data-aos="fade-up">
                    <div class="w-20 h-20 mx-auto mb-6 honey-flow rounded-xl flex items-center justify-center">
                        <i class="fas fa-${icon} text-white text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-amber-900 mb-4">${title}</h3>
                    <p class="text-amber-800">${description}</p>
                </div>
            `;
        }

        // Products data and rendering
        const products = [
            {
                id: 1,
                name: "عسل السدر الملكي الفاخر",
                price: 599,
                image: "sidr-honey.png",
                description: "عسل سدر فاخر من أجود المناحل العالمية",
                rating: 5,
                features: ["طبيعي 100%", "معبأ يدوياً", "غني بالمعادن"]
            },
            // Add more products
        ];

        function renderProducts() {
            const productsGrid = document.getElementById('products-grid');
            productsGrid.innerHTML = products.map(product => `
                <div class="product-card rounded-2xl overflow-hidden" data-aos="fade-up">
                    <div class="relative">
                        <img src="${product.image}" alt="${product.name}" class="w-full h-72 object-cover">
                        <div class="absolute inset-0 bg-gradient-to-t from-amber-900/50 to-transparent"></div>
                        <div class="absolute top-4 right-4 premium-glass px-4 py-2 rounded-full text-white">
                            ${product.rating} ⭐
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-2xl font-bold text-amber-900 mb-2">${product.name}</h3>
                        <p class="text-amber-800 mb-4">${product.description}</p>
                        <div class="flex flex-wrap gap-2 mb-4">
                            ${product.features.map(feature => `
                                <span class="premium-glass px-3 py-1 rounded-full text-sm text-amber-900">
                                    ${feature}
                                </span>
                            `).join('')}
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-3xl font-bold text-amber-600">${product.price} ريال</span>
                            <button onclick="addToCart(${product.id})" 
                                    class="honey-flow text-white px-6 py-3 rounded-xl font-bold shine-effect">
                                إضافة للسلة
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Initialize
        window.onload = () => {
            renderProducts();
        };
    </script>
